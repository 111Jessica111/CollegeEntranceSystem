<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".module.home.MineFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="45dp"
            app:cardElevation="10dp"
            android:layout_centerHorizontal="true"
            app:cardPreventCornerOverlap="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/user_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/user_head"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_below="@+id/cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jessica"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/mine_background">

                <ImageButton
                    android:padding="5dp"
                    android:id="@+id/img_1"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_1"
                    android:background="@android:color/transparent"/>

                <TextView
                    android:layout_toRightOf="@+id/img_1"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:text="模拟志愿填报"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/mine_background">

                <ImageButton
                    android:padding="5dp"
                    android:id="@+id/img_2"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_2"
                    android:background="@android:color/transparent"/>

                <TextView
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/img_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的信息"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/mine_background">

                <ImageButton
                    android:padding="5dp"
                    android:id="@+id/img_3"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/img_3"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/img_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我喜欢的大学"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/mine_background">

                <ImageButton
                    android:padding="5dp"
                    android:id="@+id/img_4"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:src="@drawable/img_4"
                    android:background="@android:color/transparent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/img_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="消息中心"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/mine_background">

                <ImageButton
                    android:padding="5dp"
                    android:id="@+id/img_5"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/img_5"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/img_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="历史记录"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/mine_background">

                <ImageButton
                    android:padding="5dp"
                    android:id="@+id/img_6"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:src="@drawable/img_6"
                    android:background="@android:color/transparent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/img_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/mine_background">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

            <ImageButton
                android:padding="5dp"
                android:id="@+id/img_7"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:src="@drawable/img_7"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/img_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="意见反馈"/>

            </RelativeLayout>

            <EditText
                android:id="@+id/edit_comment"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:inputType="textMultiLine"
                android:gravity="top|start"
                android:imeOptions="actionDone"
                android:minLines="10"
                android:hint="想要什么，我给你做..."
                android:textSize="12dp"
                android:cursorVisible="true"
                android:background="@drawable/edit_background"/>

            <RelativeLayout
                android:id="@+id/edit_done"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="完成"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/button_background"
                    android:textColor="@color/white"
                    android:padding="6dp" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>