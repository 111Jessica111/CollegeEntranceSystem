<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/college_image"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/college_1"/>

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/college_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="华中科技大学"
                android:textSize="13dp"
                android:textStyle="bold"/>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/tags_container"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/btn_tag1"
                    style="@style/TagStyle"
                    android:textSize="10dp"
                    android:text="双一流" />

                <TextView
                    android:id="@+id/btn_tag2"
                    android:layout_marginLeft="10dp"
                    android:textSize="11dp"
                    style="@style/TagStyle"
                    android:text="985" />

                <TextView
                    android:id="@+id/btn_tag3"
                    android:layout_marginLeft="10dp"
                    android:textSize="11dp"
                    style="@style/TagStyle"
                    android:text="211" />

                <TextView
                    android:id="@+id/btn_tag4"
                    style="@style/TagStyle"
                    android:textSize="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="强基计划" />

            </com.google.android.flexbox.FlexboxLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/college_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="湖北武汉"
                    android:textSize="10dp"/>

                <TextView
                    android:id="@+id/college_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="综合类"
                    android:textSize="10dp"/>

                <TextView
                    android:id="@+id/college_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="本科"
                    android:textSize="10dp"/>

                <TextView
                    android:id="@+id/college_nature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="公办"
                    android:textSize="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/line_3"/>

</LinearLayout>